<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="atensoftware_tab" translate="label" sortOrder="1000">
            <label>Aten Software Configuration</label>
        </tab>
		<section id="atensoftware_productexport" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>AtenSoftware_ProductExport</label>
            <tab>atensoftware_tab</tab>
            <resource>AtenSoftware_ProductExport::config</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>General</label>
                <field id="productexport_password" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Password</label>
                    <comment><![CDATA[Make up a password and enter it.  The password will be required for running exports.  Leave the password blank to disable the export.]]></comment>
                </field>
            </group>
        </section>
 
    </system>
</config>